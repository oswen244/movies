<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="home_title_text">
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="item_genre_style">
        <item name="fontFamily">sans-serif-condensed-light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="empty_error_text">
        <item name="fontFamily">sans-serif-condensed-light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="movie_name">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/small_space</item>
        <item name="android:background">@color/colorBlackTranslucent</item>
    </style>

    <style name="movie_rate">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">@dimen/small_space</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/oval_overlay_background</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">@dimen/small_space</item>
        <item name="android:paddingEnd">@dimen/small_space</item>
        <item name="drawableEndCompat">@drawable/ic_star</item>
        <item name="android:drawablePadding">@dimen/small_space</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="header_title">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="text_subtitle">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlackText</item>
    </style>

    <style name="buttons" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button_text</item>
    </style>

    <style name="search_button" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:paddingStart">@dimen/horizontal_activity_space</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="drawableStartCompat">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/small_space</item>
        <item name="android:layout_margin">@dimen/horizontal_activity_space</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="icon">@drawable/ic_search</item>
        <item name="iconTint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="loading_image_movie">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="hint_search_movie_view" parent="empty_error_text">
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_release_date">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="linkHomePage">

    </style>
</resources>
